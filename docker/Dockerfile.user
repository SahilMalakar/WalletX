# ---------- Base ----------
FROM node:22-alpine AS base

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"

RUN corepack enable
RUN corepack prepare pnpm@10.19.0 --activate

WORKDIR /app

# ---------- Dependencies ----------
FROM base AS deps

COPY pnpm-lock.yaml pnpm-workspace.yaml package.json turbo.json ./
COPY packages ./packages
COPY apps/userWeb ./apps/userWeb

RUN pnpm install --frozen-lockfile

# ---------- Build ----------
FROM deps AS builder

# Generate Prisma client
RUN pnpm --filter @repo/database db:generate

# Build only web and dependencies
RUN pnpm turbo run build --filter=web...

# ---------- Production Runner ----------
FROM node:22-alpine AS runner

WORKDIR /app
ENV NODE_ENV=production

# Copy standalone output
COPY --from=builder /app/apps/userWeb/.next/standalone ./
COPY --from=builder /app/apps/userWeb/.next/static ./apps/userWeb/.next/static

EXPOSE 3000

CMD ["node", "apps/userWeb/server.js"]